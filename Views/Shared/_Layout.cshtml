                    <a asp-action="/" asp-controller="Home">Образовательные программы</a>
                        @* <span class="menu__arrow"></span> *@
                </div>
                <div class="nav__menu-item">
                    <a asp-action="About" asp-controller="Home">О нас</a>
                </div>
                <div class="nav__menu-item">
                    <a asp-action="Contacts" asp-controller="Home">Контакты</a>
                </div>
            </div>
            <div class="menu__icon">
                <span></span>
